{
    "$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
    "assist": { "actions": { "source": { "organizeImports": "on" } } },

    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single"
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "off"
            },
            "style": {
                "noNonNullAssertion": "off"
            },
            "a11y": {
                "noAutofocus": "off"
            }
        }
    }
}
